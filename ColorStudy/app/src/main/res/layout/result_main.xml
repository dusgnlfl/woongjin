<?xml version="1.0" encoding="utf-8"?>
<com.ssomai.android.scalablelayout.ScalableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rm"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    sl:scale_base_width = "1280"
    sl:scale_base_height = "800" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/together"
        sl:scale_top = "10"
        sl:scale_left = "0"
        sl:scale_height = "380"
        sl:scale_width = "1280"
        />

    <ImageView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        sl:scale_left = "140"
        sl:scale_top = "410"
        sl:scale_width = "1000"
        sl:scale_height = "200"
        />

    <Button
        android:id="@+id/btnTrue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        sl:scale_textsize = "50"
        android:text = "다른 문제 풀기"
        sl:scale_left = "100"
        sl:scale_top = "660"
        sl:scale_width = "490"
        sl:scale_height = "140"
        android:visibility="invisible"
        android:onClick = "onClick"
        />

    <Button
        android:id="@+id/btnFalse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        sl:scale_textsize = "50"
        android:text = "다시 풀기"
        sl:scale_left = "100"
        sl:scale_top = "660"
        sl:scale_width = "490"
        sl:scale_height = "140"
        android:visibility="invisible"
        android:onClick = "onClick"
        />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        sl:scale_textsize = "50"
        android:text = "나가기"
        sl:scale_left = "690"
        sl:scale_top = "660"
        sl:scale_width = "490"
        sl:scale_height = "140"
        android:onClick = "onClick"
        />

</com.ssomai.android.scalablelayout.ScalableLayout>
